import random

def generate_question():
    """Generate a random arithmetic question."""
    operators = ['+', '-', '*', '//']
    a = random.randint(1, 20)
    b = random.randint(1, 20)
    op = random.choice(operators)
    question = f"{a} {op} {b}"
    answer = eval(question)
    return question, answer

def math_quiz():
    print("🧠 Welcome to the Math Quiz Game!")
    score = 0
    for i in range(1, 6):
        q, a = generate_question()
        try:
            user_answer = int(input(f"Q{i}: {q} = "))
            if user_answer == a:
                print("✅ Correct!")
                score += 1
            else:
                print(f"❌ Wrong! Correct answer: {a}")
        except ValueError:
            print(f"❌ Invalid input! Correct answer: {a}")
    print(f"🎉 Quiz finished! Your score: {score}/5")

if __name__ == "__main__":
    math_quiz()
